{
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "resolveJsonModule": true
    },
    "include": ["src/swagger-output.json", "src/**/*"]
}
